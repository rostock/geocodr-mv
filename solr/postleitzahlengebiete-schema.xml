  <uniqueKey>id</uniqueKey>
  <fieldType name="postleitzahl_engram" class="solr.TextField">
    <analyzer>
      <tokenizer class="solr.StandardTokenizerFactory"/>
      <filter class="solr.EdgeNGramFilterFactory" maxGramSize="5" minGramSize="4"/>
