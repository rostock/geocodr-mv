      <filter class="solr.NGramFilterFactory" maxGramSize="3" minGramSize="3"/>
    </analyzer>
  </fieldType>
  <fieldType name="plong" class="solr.LongPointField" docValues="true"/>
  <fieldType name="string" class="solr.StrField" sortMissingLast="true" docValues="true"/>
  <field name="_version_" type="plong" indexed="false" stored="false"/>
  <field name="gemarkung_name" type="name_fold" stored="true"/>
  <field name="gemarkung_name_ngram" type="name_ngram" stored="false"/>
  <field name="gemarkung_schluessel" type="string" stored="false"/>
